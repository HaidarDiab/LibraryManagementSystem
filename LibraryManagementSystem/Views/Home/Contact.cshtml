@model LibraryManagementSystem.ViewModels.ContactFormViewModel
@{
    ViewBag.Title = "تواصل معنا";
    Layout = "~/Views/Shared/_layout.cshtml";
}



<h2 class="text-center"></h2>

<div class="container manage contact">

    <div class=" row col-md-12 text-center">

        <div class="col-md-5 details-info">

            <h4 class="form-control"><i class="bi bi-person"></i>@Model.Profile.FirstName </h4>
            <h4 class="form-control"><i class="bi bi-geo-alt"></i> @Model.Profile.Address</h4>
            <h4 class="form-control"><i class="bi bi-envelope"></i> @Model.Profile.Email</h4><br />

            <div class="mapouter">
                <div class="gmap_canvas">
                    <iframe class="gmap_iframe" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=600&amp;height=400&amp;hl=en&amp;q=syrian virtual university-damascus&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
                    <a href="https://www.kokagames.com/fnf-friday-night-funkin-mods/">FNF</a>
                </div>
            </div>

        </div>

        <div class="col-md-1"></div>

        <div class="col-md-6 email-dev">


            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()


                <div class="email-textbox">

                    <div class="form-group">
                        @Html.LabelFor(m => m.FullName)
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FullName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.YourEmail)
                        @Html.TextBoxFor(m => m.YourEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.YourEmail)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Subject)
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Subject)
                    </div>

                    <div class=" form-group">
                        @Html.LabelFor(m => m.Message)
                        @Html.TextAreaFor(m => m.Message, new { @class = " form-control textareabox", rows = 5 })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>

                    <div class="form-group">
                        <input title="أرفق مرفق" type="file" name="أرفق ملف" /><br><br>

                    </div>

                    <button type="submit" class="btn btn-info">إرسال</button>

                    <p style="color: #40a724; text-align: center; background-color: antiquewhite;">@ViewBag.Result</p>
                    <p style="color: #ff0000; text-align: center; background-color: antiquewhite">@ViewBag.Error</p>

                </div>

            }

        </div>

    </div>

</div>




