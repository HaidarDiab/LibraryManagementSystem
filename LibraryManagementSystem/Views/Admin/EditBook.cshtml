@model LibraryManagementSystem.ViewModels.BookFormViewModel
@{
    ViewBag.Title = "تعديل كتاب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*This div for page-loading wating*@
<div class="loading" align="center">
    <img src="~/images/book-loading.gif" alt="Loading, Please Wait..." style="text-align: center" />
</div>


<div class="container manage">

    <h2 class="text-center">تعديل الكتاب</h2>


    <div class="jumbotron row col-md-12">

        <div class="col-md-3"></div>


        <div class="col-md-9">

            @using (Html.BeginForm("EditBook", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="col-md-6 pull-right">

                    <div class="form-group">

                        @Html.LabelFor(m => m.Book.Title, new { @class = "col-md-10" })
                        @Html.TextBoxFor(m => m.Book.Title, new { @class = "form-control" })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Book.Summary, new { @class = "col-md-10" })
                        @Html.TextAreaFor(m => m.Book.Summary, new { @class = "form-control" })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Book.AuthorName, new { @class = "col-md-10" })
                        @Html.TextBoxFor(m => m.Book.AuthorName, new { @class = "form-control" })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Book.ReleaseDate, new { @class = "col-md-10" })
                        @Html.TextBoxFor(m => m.Book.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control", placeholder = "eg. 1 Aug 2022" })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.BooksCategories, new { @class = "col-md-10" })
                        @Html.DropDownListFor(m => m.Book.BooksCtegoryId, new SelectList(Model.BooksCategories, "Id", "Name"), "اختر تصنيف", new { @class = "form-control" })

                        <div class="col-md-10 textcenter text-danger">
                            <h4 class="message-result text-center">@ViewBag.Result</h4>

                        </div>

                    </div>


                    <div class="row col-md-5 pull-right">
                        @Html.HiddenFor(m => m.Book.Id)
                        @Html.HiddenFor(m => m.Book.BooksCtegoryId)
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-info ">حفظ</button><br /><br />
                        @Html.ActionLink("الكتب", "ManageBook", "Admin", null, new { @class = "btn btn-info" })


                    </div>
                </div>


                <div class="form-group col-md-3">

                    <img id="uploadPreview" class="img-circle image-upload" />
                    <input type="file" name="file" id="uploadImage" onchange="PreviewImage()" class="input-image-upload" />

                </div>

            }


        </div>

    </div>


</div>

